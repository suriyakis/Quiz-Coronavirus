
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fefefe">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:background="@color/colorPrimary"
        android:elevation="4dp" 
        android:theme="@style/AppTheme.DarkAppBar"
        android:layout_height="?android:attr/actionBarSize"/>


    <TextView
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Corona Virus questionare   " />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        
        android:scrollbars="vertical">

        <GridLayout
            android:rowCount="3"
            android:columnCount="2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"            
            android:padding="16dp"
            android:layout_gravity="center"
           
            
            >
            <!--Row one-->
            <android.support.v7.widget.CardView
                android:layout_width="147dp"
                android:layout_height="141dp"
                
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp">
               
                    
                    <LinearLayout                    
                    android:id="@+id/historyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation= "vertical"
                    android:layout_gravity="right">

                    <ImageView
                        android:src="@drawable/history"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginTop="10dp" 
                    
                    />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAsh" />

                    <TextView
                        android:text="History"
                        style="@style/topic_textView"
                        
                    />





                </LinearLayout>






            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="147dp"
                android:layout_height="141dp"
                
                android:layout_gravity="left"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp">

                <LinearLayout
                     android:id="@+id/geographyLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation= "vertical"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/geography"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginTop="10dp" 
                    
                    />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAsh" />
                    <TextView
                        android:text="Geography"
                        style="@style/topic_textView" />





                </LinearLayout>






            </android.support.v7.widget.CardView>

            <!--Row Two-->

            <android.support.v7.widget.CardView
                android:layout_width="147dp"
                android:layout_height="141dp"
                
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                <LinearLayout
                     android:id="@+id/spaceLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation= "vertical"
                    android:layout_gravity="right">

                    <ImageView
                        android:src="@drawable/space"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginTop="10dp" 
                    
                    />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAsh" />
                    <TextView
                        android:text="Space"
                        style="@style/topic_textView" />





                </LinearLayout>






            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="147dp"
                android:layout_height="141dp"
                
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp">


                <LinearLayout
                    android:id="@+id/engineeringLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation= "vertical"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/engineering"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginTop="10dp" 
                    
                    />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAsh" />
                    <TextView
                        android:text="Engineering"
                        style="@style/topic_textView" />





                </LinearLayout>






            </android.support.v7.widget.CardView>


            <!--Row Three-->

            <android.support.v7.widget.CardView
                android:layout_width="147dp"
                android:layout_height="141dp"
                
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp"
                android:layout_marginTop="10dp">
                <LinearLayout
                    android:id="@+id/programmingLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation= "vertical"
                    android:layout_gravity="right">

                    <ImageView
                        android:src="@drawable/programming"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginTop="10dp" 
                    
                    />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAsh" />
                    <TextView
                        android:text="Programming"
                        style="@style/topic_textView" />





                </LinearLayout>






            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="147dp"
                android:layout_height="141dp"
                
                android:layout_gravity="left"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="4dp"
                app:cardElevation="2dp"
                android:layout_marginBottom="10dp">


                <LinearLayout
                    android:id="@+id/businessLayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation= "vertical"
                    android:gravity="center_vertical">

                    <ImageView
                        android:src="@drawable/business"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center|center_horizontal"
                        android:layout_marginTop="10dp" 
                    
                    />
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorAsh" />
                    <TextView
                        
                        android:text="Business"
                        style="@style/topic_textView"
                         />





                </LinearLayout>






            </android.support.v7.widget.CardView>





        </GridLayout>




    </ScrollView>






</LinearLayout>